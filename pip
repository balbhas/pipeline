
pipeline {
    agent any 
    stages {
        stage('compile stage') {
            steps {
                withMaven(maven: '/usr/local/maven'){
                sh 'mvn compile'
            }
        }
        }
            stage('testing  stage') {
            steps {
                withMaven(maven: '/usr/local/maven'){
                sh 'mvn test'
            }
        }
        }

   stage('deploy stage') {
            steps {
                withMaven(maven: '/usr/local/maven'){
                sh 'mvn deploy'
            }
        }
        }
    }
